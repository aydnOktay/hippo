<%- include("./layout/header",{categories:data?.categories}) %>
<div class="page-body">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-block">
          <h4 class="sub-title">Hakkımızda</h4>
          <br />
          <form
            method="POST"
            action="/admin/about/update"
            enctype="multipart/form-data"
          >
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Hakkımızda</label>
              <div class="col-sm-10">
                <textarea
                  type="text"
                  name="about_description"
                  class="form-control"
                >
<%- data.about.about_description %></textarea
                >
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Fotoğraf Seç</label>
              <div class="col-sm-10">
                <input type="file" name="file" class="form-control" />
              </div>
            </div>

            <button class="btn btn-outline-success" type="submit">
              Güncelle !
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("./layout/footer") %>
