<%- include("./layout/header",{categories:data?.categories}) %>
<div class="page-body">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h5>Kategoriler</h5>
          <hr />
          <a href="/admin/category/categoriesAdd">
            <button class="btn btn-success">
              <i class="icofont icofont-check-circled"></i> Kategori Ekle
            </button></a
          >
          <div class="card-header-right">
            <ul class="list-unstyled card-option">
              <li><i class="icofont icofont-simple-left"></i></li>
              <li><i class="icofont icofont-maximize full-card"></i></li>
              <li><i class="icofont icofont-minus minimize-card"></i></li>
              <li><i class="icofont icofont-refresh reload-card"></i></li>
              <li><i class="icofont icofont-error close-card"></i></li>
            </ul>
          </div>
        </div>
        <div class="card-block table-border-style">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>Kategori Fotoğraf</th>
                  <th>Kategori Adı</th>
                  <th>Ekipman Ekle</th>
                  <th>Düzenle</th>
                  <th>Sil</th>
                </tr>
              </thead>
              <tbody>
                <% data.categories.forEach(element=> { %>
                <tr>
                  <td>
                    <img
                      src="/demos/store/<%- element.category_image %>"
                      style="height: 50px; width: 50px; object-fit: contain"
                      class="img-fluid"
                      alt="Colorlib Template"
                    />
                  </td>
                  <td><%- element.category_name %></td>
                  <td>
                    <a href="/admin/product/<%- element.id %>"
                      ><button class="btn btn-success">
                        <i class="icofont icofont-check-circled"></i></button
                    ></a>
                  </td>
                  <td>
                    <a href="/admin/category/update/<%- element.id %>"
                      ><button class="btn btn-success">
                        <i class="icofont icofont-check-circled"></i></button
                    ></a>
                  </td>
                  <td>
                    <a href="/admin/category/delete/<%- element.id %>">
                      <button class="btn btn-danger">
                        <i class="icofont icofont-eye-alt"></i></button
                    ></a>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("./layout/footer") %>
