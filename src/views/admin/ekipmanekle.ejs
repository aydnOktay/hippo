<%- include("./layout/header",{categories:data?.categories}) %>
<div class="page-body">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-block">
          <h4 class="sub-title">Ekipman Ekle Bölümü</h4>
          <br />
          <form
            enctype="multipart/form-data"
            method="POST"
            action="/admin/product"
          >
            <input type="hidden" name="id" value="<%- data.id %>" />
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Ekipman Adı</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  name="product_name"
                  class="form-control"
                  placeholder=""
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Ekipman Açıklaması</label>
              <div class="col-sm-10">
                <input
                  type="text"
                  name="product_description"
                  class="form-control"
                  placeholder=""
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label"
                >Ekipman Özellikleri <br />
                <small>(Özellikleri virgül ile ayırın)</small></label
              >
              <div class="col-sm-10">
                <textarea type="text" name="product_props" class="form-control">
                </textarea>
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">
                Günlük Kiralama Fiyatı
              </label>
              <div class="col-sm-10">
                <input
                  type="number"
                  name="daily_price"
                  class="form-control"
                  placeholder=""
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">
                3 Günlük Kiralama Fiyatı
              </label>
              <div class="col-sm-10">
                <input
                  type="number"
                  name="three_day_price"
                  class="form-control"
                  placeholder=""
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">
                Haftalık Kiralama Fiyatı
              </label>
              <div class="col-sm-10">
                <input
                  type="number"
                  name="weekly_price"
                  class="form-control"
                  placeholder=""
                />
              </div>
            </div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label">Ekipman Fotoğrafı</label>
              <div class="col-sm-10">
                <input type="file" name="file" class="form-control" />
              </div>
            </div>
            <button type="submit" class="btn btn-outline-success">Ekle</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include("./layout/footer") %>
